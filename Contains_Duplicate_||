class Solution {
    public boolean containsNearbyDuplicate(int[] nums, int k) {
        HashMap<Integer,Integer> has=new HashMap<>();

        for(int i=0;i<nums.length;i++){
            if(has.containsKey(nums[i])){
                if(i-has.get(nums[i])<=k){
                    return true;
                }
            }
            has.put(nums[i],i);
        }

        return false;
    }
}
